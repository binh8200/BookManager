<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/grad_bg"
        android:id="@+id/intro"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Book Manager"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nguoidung"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="135dp"
                android:onClick="viewnguoidung"
                android:src="@drawable/emthree"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#19AA8B"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="43dp"
                android:layout_marginEnd="170dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/nguoidung"
                android:text="Người Dùng"
                 />

            <ImageView
                android:id="@+id/theloai"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/nguoidung"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/cateicon" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theloai"
                android:layout_toRightOf="@+id/textView3"
                android:textColor="#19AA8B"
                android:layout_marginTop="5dp"
                android:text="Thể Loại"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageHoadon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/textView3"
                android:layout_marginTop="20dp"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="42dp"
                android:layout_marginEnd="135dp"
                app:srcCompat="@drawable/hdicon" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="43dp"
                android:layout_marginEnd="190dp"
                android:layout_below="@id/imageHoadon"
                android:text="Hóa Đơn"
                android:layout_marginTop="5dp"
                android:textColor="#19AA8B"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageSach"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/imageHoadon"
                android:layout_below="@id/textView4"
                app:srcCompat="@drawable/bookicon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sách"
                android:layout_toRightOf="@id/textView6"
                android:layout_below="@id/imageSach"
                android:textAlignment="center"
                android:textColor="#19AA8B" />


            <ImageView
                android:id="@+id/imageBanchay"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="42dp"
                android:layout_marginEnd="135dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView6"
                app:srcCompat="@drawable/money_icon" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginLeft="43dp"
                android:layout_marginEnd="170dp"
                android:layout_below="@+id/imageBanchay"
                android:text="Bán chạy"
                android:textColor="#19AA8B" />

            <ImageView
                android:id="@+id/imageThongke"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imageBanchay"
                android:layout_below="@id/textView6"
                app:srcCompat="@drawable/thongke" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Thống Kê"
                android:textColor="#19AA8B"
                android:layout_below="@id/imageThongke"
                android:layout_toRightOf="@+id/textView7"/>



        </RelativeLayout>

    </ScrollView>

</LinearLayout>